// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
	"name": "Ubuntu",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	// "image": "mcr.microsoft.com/devcontainers/base:focal"
	"build": {
		// Path is relative to the devcontainer.json file.
		"dockerfile": "Dockerfile"
	},

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},
	"features": {
		"ghcr.io/devcontainers/features/node:1": {
			"nodeGypDependencies": true,
			"version": "18",
			"nvmVersion": "latest"
		},
		"ghcr.io/devcontainers/features/ruby:1": {
			"version": "2.7"
		}
	},

	"runArgs": ["--env-file",".devcontainer/dev.env"],
	
	"waitFor": "onCreateCommand",
	"onCreateCommand": "bash .devcontainer/gemsetup.sh",
	// "onCreateCommand": "",

	// "updateContentCommand": "bundle install",
	// "updateContentCommand": "bash .devcontainer/setup.sh",
	"updateContentCommand": "",

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "bash .devcontainer/startupFug.sh",
	"postCreateCommand": "",

	"postAttachCommand": {
		// "server": ""
		// "server": "rails server"
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	"forwardPorts": [
		3000
	],
	"portsAttributes": {
		"3000": {
			"label": "Application"
			// "onAutoForward": "openPreview" 
		}
	},

	// Configure tool-specific properties.
	// "customizations": {},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-azuretools.vscode-docker",
				"pdconsec.vscode-print",
				"streetsidesoftware.code-spell-checker"
			],
			"settings": {}
		}
	}

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
